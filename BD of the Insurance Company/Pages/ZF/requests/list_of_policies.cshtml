@page
@model BD_of_the_Insurance_Company.Pages.ZF.requests.list_of_policiesModel
@{
    <h1>Список полисов</h1>

    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Policies[0].Policies_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Policies[0].Policy_type_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Policies[0].Clients_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Policies[0].Staff_ID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Policies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Policies_ID)
                    </td>
                    <td>
                        @{
                            try
                            {
                                @Model.Policy.First(r => r.ID == item.Policy_typeID).Policy_type_name
                            }
                            catch
                            {
                                <p> данных нет </p>
                            }
                        }

                    </td>
                    <td>
                        @{
                            try
                            {
                                @Model.Client.First(r => r.ID == item.ClientsID).Full_name
                            }
                            catch
                            {
                                <p> данных нет </p>
                            }
                        }

                    </td>
                    <td>
                        @{
                            try
                            {
                                @Model.Staff.First(r => r.ID == item.StaffID).Full_name
                            }
                            catch
                            {
                                <p> данных нет </p>
                            }
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>

}
