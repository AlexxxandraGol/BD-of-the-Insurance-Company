@page
@model BD_of_the_Insurance_Company.ZF.IndexModel
@{
    <div class="accordion" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Запросы
                    </button>
                </h5>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    <a class="nav-link text-dark" asp-area="" asp-page="/ZF/requests/personnel_department">Отдел кадров</a>
                    <a class="nav-link text-dark" asp-area="" asp-page="/ZF/requests/risksofpolicies">Риски полисов</a>
                    <a class="nav-link text-dark" asp-area="" asp-page="/ZF/requests/list_of_clients">Список клиентов</a>
                    <a class="nav-link text-dark" asp-area="" asp-page="/ZF/requests/List_of_policies">Список полисов</a>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Фильтры
                    </button>
                </h5>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                <div class="card-body">
                    <form>
                        Отобразить сотрудников с должностью:
                        <select asp-items="Model.SelPosition" name="id" class="form-control-sm">
                            <option value="-1">Должность не выбрана</option>
                        </select>
                        <button asp-page="filters/Stuf" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />

                    <form>
                        Отобразить клиентов данных групп:
                        <select asp-items="Model.Client" name="id" class="form-control-sm">
                            <option value="-1">Группа не выбрана</option>
                        </select>
                        <button asp-page="filters/C1ient" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />

                   <form>
                        Отобразить полисы данного вида:
                        <select asp-items="Model.Type" name="id" class="form-control-sm">
                            <option value="-1">Вид полиса не выбран</option>
                        </select>
                        <button asp-page="filters/PoliciesType" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />

                    <form>
                        Отобразить полисы, по которым производились (не производились) выплаты:
                        <select asp-items="Model.Mark" name="Mark" class="form-control-sm">
                            <option value="-1">не выбран</option>
                        </select>
                        <button asp-page="filters/PayMark" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />

                    <form>
                        Отобразить оконченные (неоконченные) полисы:
                        <select asp-items="Model.Data" name="End" class="form-control-sm">
                            <option value="-1">не выбран</option>
                        </select>
                        <button asp-page="filters/PoliciesData" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
 }
